{
    "compilerOptions": {
      "target": "es6",
      "module": "ES2022",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,
      "noEmit": true 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}